<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wakemeup.erika.takenoue.fancymemo">

    <application
        android:name=".MemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_akte"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round_akte"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InputActivity"
            android:screenOrientation="portrait"
            android:label=""
            android:theme="@style/AppTheme3">
        </activity>
        <activity android:name=".SearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:label=""
            android:theme="@style/AppTheme4">
        </activity>
        <activity android:name=".LockActivity"
            android:screenOrientation="portrait"
            android:label=""
            android:theme="@style/AppTheme4">
        </activity>
            <activity android:name=".FavoriteActivity"
                android:screenOrientation="portrait"
                android:label=""
                android:theme="@style/AppTheme3">
        </activity>
    </application>

</manifest>