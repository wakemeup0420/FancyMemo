<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AlertTitleHeight"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/titleIcon"
        android:gravity="center"
        android:text="SoRT"
        android:textColor="#eecaff"
        android:textSize="@dimen/AlertTitleSize" />

    <ImageView
        android:id="@+id/titleIcon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AlertTitleHeight"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon0" />

    <ImageView
        android:id="@+id/titleIcon2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AlertTitleHeight"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/title"
        android:src="@drawable/icon0" />

    <TextView
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SortItemSize"
        android:layout_below="@id/title"
        android:layout_marginTop="15dp"
        android:text="新しい順"
        android:gravity="center"
        android:textSize="@dimen/SortItemTextSize" />

    <TextView
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SortItemSize"
        android:layout_below="@id/item1"
        android:text="古い順"
        android:gravity="center"
        android:textSize="@dimen/SortItemTextSize" />

    <TextView
        android:id="@+id/item3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SortItemSize"
        android:layout_below="@id/item2"
        android:text="五十音順"
        android:gravity="center"
        android:textSize="@dimen/SortItemTextSize" />

</RelativeLayout>
